pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Ajinkyapatil1234/website.git'
            }
        }
        stage('Build') {
            steps {
                sh 'apt-get update'
                sh 'DEBIAN_FRONTEND=noninteractive apt-get install -y apache2'
                sh 'cp -R * /var/www/html/'
            }
        }
        stage('Run Container') {
            steps {
                sh 'echo $PATH'
                sh 'which docker'
                sh 'docker --version'
                sh '/usr/bin/docker run -d -p 82:80 --name webapp-container ubuntu:latest'
            }
        }
        stage('Publish') {
            when {
                branch 'master'
            }
            steps {
                sh 'service apache2 start'
                sh 'cp -R * /var/www/html/'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}


