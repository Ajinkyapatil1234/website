
pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/Ajinkyapatil1234/website.git'
        DOCKER_IMAGE = 'ajinkyadoc1234/production-app:2.0'
        K8S_NAMESPACE = 'default'
        WORKER_DOCKER = 'ubuntu@35.154.243.6'
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning repository...'
                git url: "${REPO_URL}"
            }
        }
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image on Worker 1...'
                sshagent (credentials: ['id_rsa']) {
                    sh "ssh ${WORKER_DOCKER} 'cd /path/to/your/project/website && docker build -t ${DOCKER_IMAGE} .'"
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                echo 'Pushing Docker image...'
                sshagent (credentials: ['id_rsa']) {
                    sh "ssh ${WORKER_DOCKER} 'docker push ${DOCKER_IMAGE}'"
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                echo 'Deploying to Kubernetes...'
                sh """
                kubectl apply -f deployment.yaml
                kubectl apply -f service.yaml
                kubectl set image deployment/production-app-deployment production-app=${DOCKER_IMAGE} --namespace=${K8S_NAMESPACE}
                kubectl rollout status deployment/production-app-deployment --namespace=${K8S_NAMESPACE}
                """
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}

