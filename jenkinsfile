pipeline {
    agent {
        docker {
            image 'ubuntu:latest'
            args '-u root:root'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Ajinkyapatil1234/website.git'
            }
        }
        stage('Build') {
            steps {
                sh 'apt-get update'
                sh 'apt-get install -y apache2'
                sh 'cp -R * /var/www/html/'
            }
        }
        stage('Run Container') {
            steps {
                script {
                    docker.image('ubuntu:latest').run('-d -p 82:80 --name webapp-container')
                }
            }
        }
        stage('Publish') {
            when {
                branch 'master'
            }
            steps {
                sh 'service apache2 start'
                sh 'cp -R * /var/www/html/'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}

