pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Ajinkyapatil1234/website.git'
            }
        }
        stage('Build') {
            steps {
                sh 'sudo apt-get update'
                sh 'sudo DEBIAN_FRONTEND=noninteractive apt-get install -y apache2'
                sh 'sudo cp -R * /var/www/html/'
            }
        }
        stage('Run Container') {
            steps {
                sh 'echo $PATH'
                sh 'which docker'
                sh 'docker --version'
                // Remove existing container if it exists
                sh 'sudo /usr/bin/docker rm -f webapp-container || true'
                sh 'sudo /usr/bin/docker run -d -p 82:80 --name webapp-container ubuntu:latest'
            }
        }
        stage('Publish') {
            when {
                branch 'master'
            }
            steps {
                sh 'sudo service apache2 start'
                sh 'sudo cp -R * /var/www/html/'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}


